 		set network.$1.type='$type'
 		set network.$1.device='$device'
 		set network.$1.proto='none'
+
+		set network.$1.gateway='192.168.233.1'
+		set network.$1.dns='192.168.233.114'
 	EOF
 
 	case "$protocol" in
 		static)
 			local ipad
 			case "$1" in
